generator client {
  provider = "prisma-client"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions StudySession[]
}

model ContentSource {
  id        String       @id @default(cuid())
  title     String
  bodyText  String       @map("body_text")
  status    SourceStatus @default(UNPROCESSED)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  units StudyUnit[]

  subjectId String?
  subject   Subject? @relation(fields: [subjectId], references: [id])
  topics    Topic[]
}

model StudyUnit {
  id        String   @id @default(cuid())
  sourceId  String
  type      UnitType
  content   String
  createdAt DateTime @default(now())

  source    ContentSource @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  questions Question[]

  @@index([sourceId])
}

model Subject {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String // Stores a hex code or tailwind class
  createdAt DateTime @default(now())

  topics    Topic[]
  sources   ContentSource[]
  questions Question[]
}

model Topic {
  id        String @id @default(cuid())
  name      String
  subjectId String

  subject   Subject         @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  sources   ContentSource[]
  questions Question[]

  @@unique([name, subjectId])
  @@index([subjectId])
}

model Question {
  id     String       @id @default(cuid())
  unitId String
  type   QuestionType
  data   Json

  // SRS Fields
  lastReviewed   DateTime?
  nextReviewDate DateTime  @default(now())
  interval       Int       @default(0)
  easeFactor     Float     @default(2.5)
  streak         Int       @default(0)

  createdAt DateTime @default(now())

  unit      StudyUnit @relation(fields: [unitId], references: [id], onDelete: Cascade)
  subject   Subject?  @relation(fields: [subjectId], references: [id])
  subjectId String?
  topics    Topic[]

  @@index([unitId])
}

model StudySession {
  id        String   @id @default(cuid())
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum SourceStatus {
  UNPROCESSED
  PROCESSED
}

enum UnitType {
  TEXT
  CODE
}

enum QuestionType {
  MULTI_CHOICE
  SNIPPET
  CLOZE
  OPEN
}

model StudyLog {
  id            String   @id @default(cuid())
  userId        String?
  date          DateTime @default(now())
  itemsReviewed Int      @default(0)

  @@index([date])
}
